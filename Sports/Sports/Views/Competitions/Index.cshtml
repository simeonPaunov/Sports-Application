@model IEnumerable<Sports.Models.Competition>

@{
    ViewData["Title"] = "Competition";
    var sportId = Model?.FirstOrDefault()?.Sport?.Id;
}

<h1>Competition</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.Id" class="btn btn-primary">Add New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sport)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id1="@item.Id" asp-route-id2="@sportId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-area="" asp-controller="Statistics" asp-route-id1="@item.Id" asp-route-id2="@sportId" asp-action="IndexForCompetitions">Go To Statistics</a> |
                <a asp-area="" asp-controller="Results" asp-route-id1="@item.Id" asp-route-id2="@sportId" asp-action="CreateViewForCompetition">Add Result</a> |
                <a asp-area="" asp-controller="Results" asp-route-id1="@item.Id" asp-route-id2="@sportId" asp-action="Index">Go To Results</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Sports" asp-action="Index">Back to List</a>
</div>