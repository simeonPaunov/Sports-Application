            </div>
            <div class="form-group">
                <label asp-for="Team1Result" class="control-label"></label>
                <input asp-for="Team1Result" class="form-control" />
                <span asp-validation-for="Team1Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team2Result" class="control-label"></label>
                <input asp-for="Team2Result" class="form-control" />
                <span asp-validation-for="Team2Result" class="text-danger"></span>
